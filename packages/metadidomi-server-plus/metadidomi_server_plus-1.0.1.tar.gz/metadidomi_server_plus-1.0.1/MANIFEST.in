include LICENSE
include README.md
include requirements.txt
include cloud_settings.json
include cert.pem
include key.pem

# Inclure tous les fichiers Python
recursive-include app *.py
recursive-include dynamic_server_project *.py
recursive-include alembic *.py
recursive-include apps *.py

# Inclure les fichiers statiques et templates
recursive-include app/static *
recursive-include app/templates *
recursive-include apps *
