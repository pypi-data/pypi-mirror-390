# Include the license and readme
include LICENSE
include README.md

# Include all build files
include CMakeLists.txt
include setup.py
include pyproject.toml

# Include all source files
recursive-include src *.cpp *.h *.hpp
recursive-include lib *.so *.h *.hpp
# Include Eigen headers (no extension)
recursive-include lib/arx_x5_src/include/Eigen *

# Include URDF files
recursive-include arx_x5_sdk/urdf *.urdf

# Exclude build artifacts
global-exclude *.pyc
global-exclude __pycache__
prune build
prune dist
prune *.egg-info

