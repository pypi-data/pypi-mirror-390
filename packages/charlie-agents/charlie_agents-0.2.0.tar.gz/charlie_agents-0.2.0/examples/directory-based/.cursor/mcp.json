{
  "mcpServers": {
    "local-tools": {
      "command": "node",
      "args": [
        "dist/mcp-server.js"
      ],
      "env": {
        "DEBUG": "true",
        "LOG_LEVEL": "info"
      },
      "capabilities": {
        "tools": {
          "enabled": true,
          "list": [
            {
              "name": "example_deploy",
              "description": "Deploy application to specified environment",
              "inputSchema": {
                "type": "object",
                "properties": {
                  "input": {
                    "type": "string",
                    "description": "Command input"
                  }
                },
                "required": [
                  "input"
                ]
              }
            },
            {
              "name": "example_init",
              "description": "Initialize a new feature",
              "inputSchema": {
                "type": "object",
                "properties": {
                  "input": {
                    "type": "string",
                    "description": "Command input"
                  }
                },
                "required": [
                  "input"
                ]
              }
            }
          ]
        }
      }
    }
  }
}
