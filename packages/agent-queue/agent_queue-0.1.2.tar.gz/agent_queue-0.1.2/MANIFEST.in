# Include README and documentation
include README.md
include QUICKSTART.md
include LICENSE
include pyproject.toml

# Include proto files
recursive-include client *.proto

# Include generated gRPC code (generated before build)
recursive-include client *_pb2.py
recursive-include client *_pb2_grpc.py
recursive-include client *_pb2.pyi

# Include config files
recursive-include client/config *.yaml

# Exclude generated files
global-exclude *.pyc
global-exclude __pycache__
global-exclude *.py[co]
global-exclude *~
global-exclude .git*

