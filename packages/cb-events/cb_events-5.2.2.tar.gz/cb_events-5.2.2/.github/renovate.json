{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "automergeType": "branch",
  "commitMessageLowerCase": "auto",
  "dependencyDashboard": true,
  "enabledManagers": [
    "github-actions",
    "pep723",
    "pep621",
    "pre-commit"
  ],
  "internalChecksAsSuccess": false,
  "internalChecksFilter": "strict",
  "labels": [
    "dependencies"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 5am on monday"
    ],
    "automerge": true
  },
  "minimumReleaseAge": "4 days",
  "platformAutomerge": false,
  "prConcurrentLimit": 5,
  "rangeStrategy": "bump",
  "rebaseWhen": "auto",
  "schedule": [
    "at any time"
  ],
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "timezone": "America/Edmonton",
  "packageRules": [
    {
      "description": "Major updates require manual review",
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "dependencies",
        "breaking"
      ],
      "automerge": false,
      "assignees": [
        "MountainGod2"
      ]
    },
    {
      "description": "Auto-merge non-breaking updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "autoApprove": true
    },
    {
      "description": "Keep Python version pinned",
      "matchManagers": [
        "pep621"
      ],
      "ignoreDeps": [
        "python"
      ]
    },
    {
      "description": "Skip release age for self-references",
      "matchManagers": [
        "pep723"
      ],
      "matchDepNames": [
        "cb-events"
      ],
      "minimumReleaseAge": "0"
    },
    {
      "description": "Runtime dependencies (async HTTP and validation)",
      "matchPackageNames": [
        "aiohttp",
        "aiohttp-retry",
        "aiolimiter",
        "pydantic",
        "/^pydantic-.*$/"
      ],
      "groupName": "runtime",
      "labels": [
        "dependencies",
        "core"
      ]
    },
    {
      "description": "Development tools (testing, linting, and type checking)",
      "matchPackageNames": [
        "pytest",
        "aioresponses",
        "pyrefly",
        "pyright",
        "pylint",
        "bandit",
        "ruff",
        "pre-commit",
        "/^pytest-.*$/",
        "/^pylint-.*$/",
        "/^bandit-.*$/"
      ],
      "groupName": "dev",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "description": "Documentation tools (Sphinx and extensions)",
      "matchPackageNames": [
        "sphinx",
        "furo",
        "/^sphinx-.*$/",
        "/^myst-.*$/"
      ],
      "groupName": "docs",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "description": "Build and release tools",
      "matchPackageNames": [
        "hatchling",
        "python-semantic-release",
        "/^hatch-.*$/"
      ],
      "groupName": "build",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "description": "Pre-commit hooks",
      "matchManagers": [
        "pre-commit"
      ],
      "groupName": "pre-commit-hooks",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ],
  "pep723": {
    "enabled": true,
    "managerFilePatterns": [
      "/^examples\\/.*\\.py$/",
      "/^examples\\/.*\\.pyw$/"
    ]
  },
  "pre-commit": {
    "enabled": true
  },
  "vulnerabilityAlerts": {
    "enabled": true,
    "automerge": true
  }
}
