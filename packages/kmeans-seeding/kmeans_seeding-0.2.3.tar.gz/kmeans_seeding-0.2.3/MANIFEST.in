# Include documentation
include README.md
include LICENSE
include CLAUDE.md

# Include C++ source files (needed for source distribution)
recursive-include cpp/src *.cpp *.cc *.c
recursive-include cpp/include *.h *.hpp

# Include CMake files
include cpp/CMakeLists.txt
recursive-include cpp *.cmake

# Include Python source
recursive-include python *.py

# Exclude compiled files and caches
global-exclude *.pyc
global-exclude __pycache__
global-exclude *.so
global-exclude *.dylib
global-exclude *.dll
global-exclude .DS_Store

# Exclude test and build directories
prune tests
prune build
prune build_venv
prune quantization_analysis
prune fast_k_means_2020
prune rs_kmeans
