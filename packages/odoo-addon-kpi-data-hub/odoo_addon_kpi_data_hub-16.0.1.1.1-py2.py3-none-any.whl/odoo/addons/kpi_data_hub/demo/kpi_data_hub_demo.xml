<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Demo Entity -->
    <record id="entity_demo_company" model="kpi_hub.entity">
        <field name="name">Demo Entity</field>
        <field name="partner_id" ref="base.partner_demo" />
    </record>

    <!-- Demo Data Template -->
    <record id="template_accompagnement" model="kpi_hub.template">
        <field name="name">Acompañamientos</field>
    </record>

    <!-- Demo Data Item Templates -->
    <record id="item_template_solicitantes" model="kpi_hub.item.template">
        <field name="template_id" ref="template_accompagnement" />
        <field name="name">Número de solicitantes</field>
        <field name="code">SOLICITANTES</field>
        <field name="calculation_type">data</field>
        <field name="data_type">integer</field>
        <field name="sequence">10</field>
    </record>

    <record id="item_template_acompanamientos" model="kpi_hub.item.template">
        <field name="template_id" ref="template_accompagnement" />
        <field name="name">Número de acompañamientos</field>
        <field name="code">ACOMPANAMIENTOS</field>
        <field name="calculation_type">data</field>
        <field name="data_type">integer</field>
        <field name="sequence">20</field>
    </record>

    <record id="item_template_total" model="kpi_hub.item.template">
        <field name="template_id" ref="template_accompagnement" />
        <field name="name">Total (solicitantes + acompañamientos)</field>
        <field name="code">TOTAL</field>
        <field name="calculation_type">formula</field>
        <field name="formula">SOLICITANTES + ACOMPANAMIENTOS</field>
        <field name="sequence">30</field>
    </record>
</odoo>
