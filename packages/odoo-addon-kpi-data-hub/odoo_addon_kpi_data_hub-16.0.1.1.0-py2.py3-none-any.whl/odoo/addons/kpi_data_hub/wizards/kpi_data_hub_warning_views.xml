<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="model_kpi_data_hub_warning" model="ir.model">
            <field name="name">KPI Data Hub Warning</field>
            <field name="model">kpi_data_hub.warning</field>
            <field name="state">base</field>
        </record>

        <record id="kpi_data_hub_warning_view_form" model="ir.ui.view">
            <field name="name">kpi_data_hub.warning.form</field>
            <field name="model">kpi_data_hub.warning</field>
            <field name="arch" type="xml">
                <form string="Change Template">
                    <group>
                        <field name="template_id" />
                        <field name="record_id" invisible="1" />
                    </group>
                    <p
                    >Changing the template will discard all existing KPI values. Do you want to proceed?</p>
                    <footer>
                        <button
                            string="Confirm"
                            class="btn-primary"
                            name="confirm"
                            type="object"
                        />
                        <button
                            string="Cancel"
                            class="btn-secondary"
                            special="cancel"
                        />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
