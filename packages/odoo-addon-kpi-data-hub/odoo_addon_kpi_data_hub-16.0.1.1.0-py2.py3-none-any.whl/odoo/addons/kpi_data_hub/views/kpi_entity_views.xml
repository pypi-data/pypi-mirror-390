<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="kpi_hub_entity_view_form" model="ir.ui.view">
        <field name="name">kpi.hub.entity.form</field>
        <field name="model">kpi_hub.entity</field>
        <field name="arch" type="xml">
            <form string="Entity">
                <sheet>
                    <field name="active" invisible="1" />
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <group>
                        <field name="name" />
                        <field name="partner_id" />
                        <field name="company_id" groups="base.group_multi_company" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="kpi_hub_entity_view_tree" model="ir.ui.view">
        <field name="name">kpi.hub.entity.tree</field>
        <field name="model">kpi_hub.entity</field>
        <field name="arch" type="xml">
            <tree string="Entities">
                <field name="name" />
                <field name="partner_id" />
                <field name="company_id" groups="base.group_multi_company" />
            </tree>
        </field>
    </record>

    <record id="kpi_hub_entity_action" model="ir.actions.act_window">
        <field name="name">Entities</field>
        <field name="res_model">kpi_hub.entity</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
