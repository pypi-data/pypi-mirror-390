<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- kpi_hub.mis.report form view -->
        <record id="view_kpi_hub_mis_report_form" model="ir.ui.view">
            <field name="name">kpi_hub.mis.report.form</field>
            <field name="model">kpi_hub.mis.report</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="kpi_hub_template_id" />
                            <field name="mis_report_id" />
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                            />
                            <field name="active" />
                            <field name="auto_map_items" />
                        </group>
                        <notebook>
                            <page string="Item Mappings">
                                <field name="item_mapping_ids">
                                    <tree editable="bottom">
                                        <field name="kpi_hub_item_id" />
                                        <field name="mis_kpi_id" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- kpi_hub.mis.report tree view -->
        <record id="view_kpi_hub_mis_report_tree" model="ir.ui.view">
            <field name="name">kpi_hub.mis.report.tree</field>
            <field name="model">kpi_hub.mis.report</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="kpi_hub_template_id" />
                    <field name="mis_report_id" />
                    <field name="company_id" groups="base.group_multi_company" />
                    <field name="active" />
                </tree>
            </field>
        </record>

        <!-- kpi_hub.aep.source form view -->
        <record id="view_kpi_hub_aep_source_form" model="ir.ui.view">
            <field name="name">kpi_hub.aep.source.form</field>
            <field name="model">kpi_hub.aep.source</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="template_id" />
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                            />
                            <field name="active" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- kpi_hub.aep.source tree view -->
        <record id="view_kpi_hub_aep_source_tree" model="ir.ui.view">
            <field name="name">kpi_hub.aep.source.tree</field>
            <field name="model">kpi_hub.aep.source</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="template_id" />
                    <field name="company_id" groups="base.group_multi_company" />
                    <field name="active" />
                </tree>
            </field>
        </record>

    </data>
</odoo>
