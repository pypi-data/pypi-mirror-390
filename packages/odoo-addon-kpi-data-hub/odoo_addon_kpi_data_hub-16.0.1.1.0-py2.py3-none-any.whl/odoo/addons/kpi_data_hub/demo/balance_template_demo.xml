<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Demo Data Template for Balance Sheet -->
    <record id="template_balance_sheet" model="kpi_hub.template">
        <field name="name">Balance General</field>
    </record>

    <!-- Item Templates for Balance Sheet -->
    <!-- Activo No Corriente -->
    <record id="item_anc" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">A) ACTIVO NO CORRIENTE</field>
        <field name="code">ANC</field>
        <field name="calculation_type">formula</field>
        <field
            name="formula"
        >ANC_INM_INT + ANC_INM_MAT + ANC_INV_INM + ANC_INV_EMP_LP + ANC_INV_FIN_LP + ANC_ACT_IMP_DIF + ANC_DEU_COM_NC</field>
        <field name="sequence">1</field>
    </record>
    <record id="item_anc_inm_int" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">I. Inmovilizado intangible</field>
        <field name="code">ANC_INM_INT</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">2</field>
    </record>
    <record id="item_anc_inm_mat" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">II. Inmovilizado material</field>
        <field name="code">ANC_INM_MAT</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">3</field>
    </record>
    <record id="item_anc_inv_inm" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">III. Inversiones inmobiliarias</field>
        <field name="code">ANC_INV_INM</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">4</field>
    </record>
    <record id="item_anc_inv_emp_lp" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field
            name="name"
        >IV. Inversiones en empresas del grupo y asociadas a largo plazo</field>
        <field name="code">ANC_INV_EMP_LP</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">5</field>
    </record>
    <record id="item_anc_inv_fin_lp" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">V. Inversiones financieras a largo plazo</field>
        <field name="code">ANC_INV_FIN_LP</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">6</field>
    </record>
    <record id="item_anc_act_imp_dif" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">VI. Activos por impuesto diferido</field>
        <field name="code">ANC_ACT_IMP_DIF</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">7</field>
    </record>
    <record id="item_anc_deu_com_nc" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">VII. Deudores comerciales no corrientes</field>
        <field name="code">ANC_DEU_COM_NC</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">8</field>
    </record>

    <!-- Activo Corriente -->
    <record id="item_ac" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">B) ACTIVO CORRIENTE</field>
        <field name="code">AC</field>
        <field name="calculation_type">formula</field>
        <field
            name="formula"
        >AC_ANC_MANT_VNT + AC_EXIST + AC_DEU_COM + AC_INV_EMP_CP + AC_INV_FIN_CP + AC_PERIOD_CP + AC_EFEC</field>
        <field name="sequence">9</field>
    </record>
    <record id="item_ac_anc_mant_vnt" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">I. Activos no corrientes mantenidos para la venta</field>
        <field name="code">AC_ANC_MANT_VNT</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">10</field>
    </record>
    <record id="item_ac_exist" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">II. Existencias</field>
        <field name="code">AC_EXIST</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">11</field>
    </record>
    <record id="item_ac_deu_com" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">III. Deudores comerciales y otras cuentas a cobrar</field>
        <field name="code">AC_DEU_COM</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">12</field>
    </record>
    <record id="item_ac_inv_emp_cp" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field
            name="name"
        >IV. Inversiones en empresas del grupo y asociadas a corto plazo</field>
        <field name="code">AC_INV_EMP_CP</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">13</field>
    </record>
    <record id="item_ac_inv_fin_cp" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">V. Inversiones financieras a corto plazo</field>
        <field name="code">AC_INV_FIN_CP</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">14</field>
    </record>
    <record id="item_ac_period_cp" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">VI. Periodificaciones a corto plazo</field>
        <field name="code">AC_PERIOD_CP</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">15</field>
    </record>
    <record id="item_ac_efec" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">VII. Efectivo y otros activos líquidos equivalentes</field>
        <field name="code">AC_EFEC</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">16</field>
    </record>

    <!-- Total Activo -->
    <record id="item_total_activo" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">TOTAL ACTIVO (A + B)</field>
        <field name="code">TOTAL_ACTIVO</field>
        <field name="calculation_type">formula</field>
        <field name="formula">ANC + AC</field>
        <field name="sequence">17</field>
    </record>

    <!-- Patrimonio Neto -->
    <record id="item_pn" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">A) PATRIMONIO NETO</field>
        <field name="code">PN</field>
        <field name="calculation_type">formula</field>
        <field
            name="formula"
        >PN_FONDOS_PROPIOS + PN_AJUSTES_VALOR + PN_SUBVENCIONES</field>
        <field name="sequence">18</field>
    </record>
    <record id="item_pn_fondos_propios" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">A-1) Fondos propios</field>
        <field name="code">PN_FONDOS_PROPIOS</field>
        <field name="calculation_type">formula</field>
        <field
            name="formula"
        >PN_FP_CAPITAL + PN_FP_PRIMA_EMIS + PN_FP_RESERVAS + PN_FP_ACC_PROPIAS + PN_FP_RES_ANT + PN_FP_APORT_SOCIOS + PN_FP_RES_EJER + PN_FP_DIVIDENDO + PN_FP_OTROS_INSTR</field>
        <field name="sequence">19</field>
    </record>
    <record id="item_pn_fp_capital" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">I. Capital</field>
        <field name="code">PN_FP_CAPITAL</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">20</field>
    </record>
    <record id="item_pn_fp_prima_emis" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">II. Prima de emisión</field>
        <field name="code">PN_FP_PRIMA_EMIS</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">21</field>
    </record>
    <record id="item_pn_fp_reservas" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">III. Reservas</field>
        <field name="code">PN_FP_RESERVAS</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">22</field>
    </record>
    <record id="item_pn_fp_acc_propias" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field
            name="name"
        >IV. (Acciones y participaciones en patrimonio propias)</field>
        <field name="code">PN_FP_ACC_PROPIAS</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">23</field>
    </record>
    <record id="item_pn_fp_res_ant" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">V. Resultados de ejercicios anteriores</field>
        <field name="code">PN_FP_RES_ANT</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">24</field>
    </record>
    <record id="item_pn_fp_aport_socios" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">VI. Otras aportaciones de socios</field>
        <field name="code">PN_FP_APORT_SOCIOS</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">25</field>
    </record>
    <record id="item_pn_fp_res_ejer" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">VII. Resultado del ejercicio</field>
        <field name="code">PN_FP_RES_EJER</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">26</field>
    </record>
    <record id="item_pn_fp_dividendo" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">VIII. (Dividendo a cuenta)</field>
        <field name="code">PN_FP_DIVIDENDO</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">27</field>
    </record>
    <record id="item_pn_fp_otros_instr" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">IX. Otros instrumentos de patrimonio neto</field>
        <field name="code">PN_FP_OTROS_INSTR</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">28</field>
    </record>
    <record id="item_pn_ajustes_valor" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">A-2) Ajustes por cambios de valor</field>
        <field name="code">PN_AJUSTES_VALOR</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">29</field>
    </record>
    <record id="item_pn_subvenciones" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">A-3) Subvenciones, donaciones y legados recibidos</field>
        <field name="code">PN_SUBVENCIONES</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">30</field>
    </record>

    <!-- Pasivo No Corriente -->
    <record id="item_pnc" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">B) PASIVO NO CORRIENTE</field>
        <field name="code">PNC</field>
        <field name="calculation_type">formula</field>
        <field
            name="formula"
        >PNC_PROV_LP + PNC_DEUDAS_LP + PNC_DEUDAS_EMP_LP + PNC_PAS_IMP_DIF + PNC_PERIOD_LP + PNC_ACREED_COM_NC + PNC_DEUDA_ESP_LP</field>
        <field name="sequence">31</field>
    </record>
    <record id="item_pnc_prov_lp" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">I. Provisiones a largo plazo</field>
        <field name="code">PNC_PROV_LP</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">32</field>
    </record>
    <record id="item_pnc_deudas_lp" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">II. Deudas a largo plazo</field>
        <field name="code">PNC_DEUDAS_LP</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">33</field>
    </record>
    <record id="item_pnc_deudas_emp_lp" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field
            name="name"
        >III. Deudas con empresas del grupo y asociadas a largo plazo</field>
        <field name="code">PNC_DEUDAS_EMP_LP</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">34</field>
    </record>
    <record id="item_pnc_pas_imp_dif" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">IV. Pasivos por impuesto diferido</field>
        <field name="code">PNC_PAS_IMP_DIF</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">35</field>
    </record>
    <record id="item_pnc_period_lp" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">V. Periodificaciones a largo plazo</field>
        <field name="code">PNC_PERIOD_LP</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">36</field>
    </record>
    <record id="item_pnc_acreed_com_nc" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">VI. Acreedores comerciales no corrientes</field>
        <field name="code">PNC_ACREED_COM_NC</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">37</field>
    </record>
    <record id="item_pnc_deuda_esp_lp" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field
            name="name"
        >VII. Deuda con características especiales a largo plazo</field>
        <field name="code">PNC_DEUDA_ESP_LP</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">38</field>
    </record>

    <!-- Pasivo Corriente -->
    <record id="item_pc" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">C) PASIVO CORRIENTE</field>
        <field name="code">PC</field>
        <field name="calculation_type">formula</field>
        <field
            name="formula"
        >PC_PAS_VINC_VNT + PC_PROV_CP + PC_DEUDAS_CP + PC_DEUDAS_EMP_CP + PC_ACREED_COM_CP + PC_PERIOD_CP_PAS</field>
        <field name="sequence">39</field>
    </record>
    <record id="item_pc_pas_vinc_vnt" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field
            name="name"
        >I. Pasivos vinculados con activos no corrientes mantenidos para la venta</field>
        <field name="code">PC_PAS_VINC_VNT</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">40</field>
    </record>
    <record id="item_pc_prov_cp" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">II. Provisiones a corto plazo</field>
        <field name="code">PC_PROV_CP</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">41</field>
    </record>
    <record id="item_pc_deudas_cp" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">III. Deudas a corto plazo</field>
        <field name="code">PC_DEUDAS_CP</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">42</field>
    </record>
    <record id="item_pc_deudas_emp_cp" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field
            name="name"
        >IV. Deudas con empresas del grupo y asociadas a corto plazo</field>
        <field name="code">PC_DEUDAS_EMP_CP</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">43</field>
    </record>
    <record id="item_pc_acreed_com_cp" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">V. Acreedores comerciales y otras cuentas a pagar</field>
        <field name="code">PC_ACREED_COM_CP</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">44</field>
    </record>
    <record id="item_pc_period_cp_pas" model="kpi_hub.item.template">
        <field name="template_id" ref="template_balance_sheet" />
        <field name="name">VI. Periodificaciones a corto plazo</field>
        <field name="code">PC_PERIOD_CP_PAS</field>
        <field name="calculation_type">data</field>
        <field name="data_type">currency</field>
        <field name="sequence">45</field>
    </record>
</odoo>
