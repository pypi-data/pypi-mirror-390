{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Runner Pattern Metadata",
  "type": "object",
  "properties": {
    "pattern": {
      "type": "string",
      "description": "패턴 식별자 (파일명과 동일)"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "검색/필터링용 태그 (언어, 프로토콜, 우선순위 등)"
    },
    "examples": {
      "type": "array",
      "items": { "type": "string" },
      "description": "예제 프로젝트/샘플 문서 경로"
    },
    "faq": {
      "type": "array",
      "items": { "type": "string" },
      "description": "자주 묻는 질문 키워드 (검색 힌트)"
    },
    "related_patterns": {
      "type": "array",
      "items": { "type": "string" },
      "description": "연관 패턴 목록"
    },
    "dependencies": {
      "type": "array",
      "items": { "type": "string" },
      "description": "필수 라이브러리/서비스"
    },
    "frameworks": {
      "type": "array",
      "items": { "type": "string" },
      "description": "적합한 프레임워크 (openai, anthropic, langchain 등)"
    }
  },
  "required": ["pattern", "tags"]
}

