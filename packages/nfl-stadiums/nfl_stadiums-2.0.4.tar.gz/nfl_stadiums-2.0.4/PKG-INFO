    "timezone": "America/New_York", 
    "timezone_abbreviation": "EDT", 
    "elevation": 188.0, 
    "hourly_units": 
        {
            "time": "iso8601", 
            "temperature_2m": "¬∞F", 
            "apparent_temperature": "¬∞F", 
            "precipitation_probability": "%", 
