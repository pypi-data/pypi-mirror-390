# Application Settings
APP_NAME="{project_name}"
APP_DESCRIPTION="{project_description}"
ENVIRONMENT="development"
DEBUG="False"
APP_VERSION="0.1.0"

# Server Settings
HOST="0.0.0.0"
PORT="8000"
RELOAD="True"

# CORS Settings
# Use JSON array format for list values
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
CORS_CREDENTIALS="True"
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# Database Settings
DATABASE_URL="sqlite+aiosqlite:///./data/app.db"
# For PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/dbname
DATABASE_POOL_SIZE="5"
DATABASE_MAX_OVERFLOW="10"
DATABASE_POOL_RECYCLE="3600"
DATABASE_ECHO="False"

# JWT Settings (required if using auth module)
SECRET_KEY="{secret_key}"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES="30"
REFRESH_TOKEN_EXPIRE_DAYS="7"
# Generate secure key: openssl rand -hex 32

# Logging Settings
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s | %(name)s | %(levelname)s | %(message)s"
# LOG_FILE="logs/app.log"  # Uncomment to enable file logging

# Rate Limiting
RATE_LIMIT_ENABLED="True"
RATE_LIMIT_PER_MINUTE="60"

