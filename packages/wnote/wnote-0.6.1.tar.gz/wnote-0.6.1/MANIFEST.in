include LICENSE
include README.md
include CHANGELOG.md
include requirements.txt
include pyproject.toml
include setup.py

# Include all package files
recursive-include wnote *.py

# Exclude compiled files and caches
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .git*
recursive-exclude * .DS_Store
recursive-exclude * test_*.txt
recursive-exclude * *_test.txt
recursive-exclude * *.swp
recursive-exclude * *.swo

# Exclude old monolithic file if it still exists
exclude wnote.py
exclude __init__.py
