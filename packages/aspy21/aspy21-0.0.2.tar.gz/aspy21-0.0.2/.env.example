# Aspen IP.21 Configuration
# Copy this file to .env and fill in your actual values

# Server URL (full path to AtProcessDataREST.dll)
ASPEN_BASE_URL=http://YOUR_SERVER/ProcessData/AtProcessDataREST.dll

# Basic Authentication
ASPEN_USERNAME=yourusername
ASPEN_PASSWORD=yourpassword

# Datasource name (leave empty for server default)
ASPEN_DATASOURCE=datasource_name

# Optional settings
ASPEN_TIMEOUT=60.0
ASPEN_VERIFY_SSL=False

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
ASPEN_LOG_LEVEL=INFO

# PyPI Publishing (for maintainers only)
# Get tokens from:
# - TestPyPI: https://test.pypi.org/manage/account/token/
# - PyPI: https://pypi.org/manage/account/token/
PYPI_TEST_USERNAME=__token__
PYPI_TEST_TOKEN=your-testpypi-token-here
PYPI_USERNAME=__token__
PYPI_TOKEN=your-pypi-token-here
ASPEN_TEST_TAGS=tag1, tag2, tag3
