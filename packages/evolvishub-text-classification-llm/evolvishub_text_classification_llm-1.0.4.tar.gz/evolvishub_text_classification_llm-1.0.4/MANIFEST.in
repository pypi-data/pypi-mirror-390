# Include the README and license files
include README.md
include LICENSE
include CHANGELOG.md
include MIGRATION_GUIDE.md

# Include package configuration files
include pyproject.toml
include setup.py
include requirements.txt
include pytest.ini

# Include all Python files from the main package
recursive-include evolvishub_text_classification_llm *.py

# Include configuration templates
recursive-include evolvishub_text_classification_llm/config *.yaml *.json *.toml
recursive-include evolvishub_text_classification_llm/templates *.txt *.md

# Include examples
recursive-include examples *.py *.yaml *.json *.md
recursive-include examples/providers *.py
recursive-include examples/use_cases *.py

# Include documentation
recursive-include docs *.md *.rst *.txt
recursive-include docs/_static *
recursive-include docs/_templates *

# Include test files for validation
recursive-include tests *.py
recursive-include tests/unit *.py
recursive-include tests/integration *.py
recursive-include tests/performance *.py
recursive-include tests/examples *.py

# Include type stubs
recursive-include evolvishub_text_classification_llm *.pyi

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude *.egg-info
global-exclude build
global-exclude dist
global-exclude .pytest_cache
global-exclude .mypy_cache
global-exclude .coverage
global-exclude htmlcov
global-exclude .tox
global-exclude .venv
global-exclude venv
global-exclude env
global-exclude .env

# Exclude development and IDE files
global-exclude .vscode
global-exclude .idea
global-exclude *.swp
global-exclude *.swo
global-exclude *~

# Exclude temporary files
global-exclude *.tmp
global-exclude *.temp
global-exclude *.log
