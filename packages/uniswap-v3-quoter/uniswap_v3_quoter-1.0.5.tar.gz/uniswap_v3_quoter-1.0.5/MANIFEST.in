# Include documentation files
include README.md
include LICENSE
include QUICKSTART.md
include IMPLEMENTATION_NOTES.md
include USDT_ASTER_GUIDE.md

# Include requirements
include requirements.txt

# Include only necessary Python files
include __init__.py
include quoter.py
recursive-include state *.py
recursive-include uniswap_math *.py

# Explicitly exclude example and test files
exclude example*.py
exclude test_*.py
exclude debug_*.py
exclude get_pool_*.py
exclude config.py

# Exclude pycache and other build artifacts
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude .DS_Store

