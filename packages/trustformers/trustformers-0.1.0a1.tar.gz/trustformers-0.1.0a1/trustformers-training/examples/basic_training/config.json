{
  "model": {
    "input_size": 20,
    "hidden_size": 128,
    "num_classes": 5
  },
  "training": {
    "learning_rate": 0.001,
    "batch_size": 64,
    "num_epochs": 15,
    "weight_decay": 0.0001,
    "warmup_steps": 200
  },
  "data": {
    "num_train_samples": 2000,
    "num_eval_samples": 400,
    "noise_level": 0.15
  },
  "monitoring": {
    "print_frequency": 15,
    "evaluation_frequency": 50,
    "save_checkpoints": true,
    "checkpoint_dir": "./checkpoints/basic_training"
  },
  "optimization": {
    "use_mixed_precision": false,
    "gradient_clipping": 1.0,
    "early_stopping_patience": 5
  }
}