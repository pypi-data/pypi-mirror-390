<odoo>
    <record model="ir.ui.view" id="account_move_form_view">
        <field name="name">account.move.form (in l10n_es_vat_prorate)</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='line_ids']/list/field[@name='tax_line_id']"
                position="after"
            >
                <field name="vat_prorate" column_invisible="1" />
            </xpath>
            <xpath expr="//field[@name='line_ids']/list" position="attributes">
                <attribute name="decoration-danger">debit==0 and credit == 0</attribute>
            </xpath>
            <xpath expr="//form" position="inside">
                <style>
                    .o_list_view tbody tr.text-danger.o_data_row {
                        display: none !important;
                    }
                </style>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']" position="before">
                <field name="with_special_vat_prorate" invisible="1" />
            </xpath>
            <xpath
                expr="//field[@name='invoice_line_ids']/list/field[@name='tax_ids']"
                position="after"
            >
                <field
                    name="with_vat_prorate"
                    string="Vat Prorate"
                    column_invisible="not parent.with_special_vat_prorate or parent.move_type not in ['in_invoice', 'in_refund']"
                />
            </xpath>
        </field>
    </record>
    <record model="ir.actions.act_window" id="account.action_account_moves_all">
        <field
            name="domain"
        >[('display_type', 'not in', ('line_section', 'line_note')), ('parent_state', '!=', 'cancel'), '!', '&amp;', ('debit', '=', 0.0), ('credit', '=', 0.0)]</field>
    </record>
</odoo>
