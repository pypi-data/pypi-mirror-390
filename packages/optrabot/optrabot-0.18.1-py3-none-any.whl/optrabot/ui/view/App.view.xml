<mvc:View
	controllerName="com.optrabot.ui.controller.App"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:tnt="sap.tnt"
	xmlns:mvc="sap.ui.core.mvc">

	<!--<App id="app" />-->
	<tnt:ToolPage id="optrabot_app" class="optrabotToolPage">
		<tnt:header>
			<tnt:ToolHeader>
				<Button
					id="sideNavigationToggleButton"
					icon="sap-icon://menu2"
					type="Transparent"
					press=".onSideNavButtonPress"
					tooltip="{i18n>sideNavigationCollapseTooltip}">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</Button>
				<ToolbarSpacer />
				<Image height="1.5rem" class="sapUiSmallMarginBegin" src="img/logo-optrabot-dark.png"/>
				<Title text="{i18n>appTitle}" level="H1"/>
				<ToolbarSpacer />
				<Button icon="sap-icon://log" tooltip="{i18n>btnShutdownOptraBot}" press="onShutdownPress"/>
			</tnt:ToolHeader>
		</tnt:header>
		<tnt:sideContent>
			<tnt:SideNavigation expanded="true" selectedKey="{side>/selectedKey}">
				<tnt:NavigationList
					items="{
						path: 'side>/navigation',
						templateShareable: false
					}">
					<tnt:NavigationListItem
						text="{path: 'side>titleI18nKey', formatter: '.getBundleText'}"
						icon="{side>icon}"
						expanded="{side>expanded}"
						key="{side>key}"
						href="#/{side>key}">
						<!--<tnt:NavigationListItem
							text="{path: 'side>titleI18nKey', formatter: '.getBundleText'}"
							key="{side>key}"
							href="#/document/{side>key}">
						</tnt:NavigationListItem>-->
					</tnt:NavigationListItem>
				</tnt:NavigationList>
				<tnt:fixedItem>
					<tnt:NavigationList
						items="{
							path: 'side>/fixedNavigation',
							templateShareable: false
						}">
						<tnt:NavigationListItem
							text="{path: 'side>titleI18nKey', formatter: '.getBundleText'}"
							icon="{side>icon}"
							key="{side>key}"
							href="#/{side>key}">
						</tnt:NavigationListItem>
					</tnt:NavigationList>
				</tnt:fixedItem>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<App id="app" />
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>
