# SpecMaker Core Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
# SQLite database URL for DBOS durability
# Example: sqlite:///specmaker.sqlite
# For PostgreSQL: postgresql://user:password@localhost:5432/specmaker
SYSTEM_DATABASE_URL=sqlite:///specmaker.sqlite

# Model Configuration
# LLM provider key (e.g., openai, anthropic)
MODEL_PROVIDER=openai

# Fallback model identifier (used when not specified per agent)
# Examples: gpt-4, gpt-4o-mini, claude-sonnet-4, etc.
MODEL_NAME_FALLBACK=gpt-5

# API Keys
# OpenAI API key for authentication
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Fallback reasoning effort level for extended thinking models (used when not specified per agent)
# Options: low, medium, high
REASONING_EFFORT_FALLBACK=medium

# Timeout Configuration
# Model API call timeout in seconds
MODEL_TIMEOUT=120.0

# DBOS step execution timeout in seconds
STEP_TIMEOUT=300.0

# Feature Flags
# Enable DBOS-managed automatic step retries
# Set to true or false
DURABLE_RETRIES_ENABLED=false

