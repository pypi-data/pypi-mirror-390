<PerspectiveHierarchies>                                
  <xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:sql="urn:schemas-microsoft-com:xml-sql">
    <xs:element>
      <xs:complexType>
        <xs:sequence>
          <xs:element type="row"/>
        </xs:sequence>
      </xs:complexType>
    </xs:element>
    <xs:complexType name="row">
      <xs:sequence>
        <xs:element minOccurs="0" name="ID" sql:field="ID" type="xs:unsignedLong"/>
        <xs:element minOccurs="0" name="ID.Perspective" sql:field="ID.Perspective" type="xs:string"/>
        <xs:element minOccurs="0" name="ID.PerspectiveTable" sql:field="ID.PerspectiveTable" type="xs:string"/>
        <xs:element minOccurs="0" name="ID.PerspectiveHierarchy" sql:field="ID.PerspectiveHierarchy" type="xs:string"/>
        <xs:element minOccurs="0" name="HierarchyID" sql:field="HierarchyID" type="xs:unsignedLong"/>
        <xs:element minOccurs="0" name="HierarchyID.Table" sql:field="HierarchyID.Table" type="xs:string"/>
        <xs:element minOccurs="0" name="HierarchyID.Hierarchy" sql:field="HierarchyID.Hierarchy" type="xs:string"/>
      </xs:sequence>
    </xs:complexType>
  </xs:schema>
{{rows}}
</PerspectiveHierarchies>