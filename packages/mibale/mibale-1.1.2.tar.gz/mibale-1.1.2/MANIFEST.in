# Fichiers inclus dans la distribution
include LICENSE
include README.md
include requirements.txt
include pyproject.toml

# Inclure les templates
recursive-include mibale/templates *.*
recursive-include mibale/templates *.*

# Inclure les données de package
recursive-include mibale *.py
include mibale/android/*.py
include mibale/ios/*.py
include mibale/cli/*.py
include mibale/core/*.py
include mibale/compiler/*.py
include mibale/render/*.py
include mibale/router/*.py
include mibale/stores/*.py
include mibale/services/*.py
include mibale/directives/*.py
include mibale/components/*.py
include mibale/dev/*.py
include mibale/builder/*.py

# Exclure les fichiers de développement
global-exclude __pycache__
global-exclude *.pyc
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dll
global-exclude *.exe