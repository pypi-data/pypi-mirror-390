# Include documentation
include README.md
include LICENSE
include CHANGELOG.md

# Include requirements
include requirements.txt
include pyproject.toml

# Include documentation files
include HOW_TO_USE_FOR_ROUTING.md
include IMPROVED_INFORMATION_VALUE_EXPLANATION.md
include DEBUG_CONTROL_GUIDE.md
include INFORMATION_WEIGHT_RANGES.md
include MAXIMIZATION_VS_MINIMIZATION_GUIDE.md

# Exclude unnecessary files
exclude .gitignore
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store

# Exclude build artifacts
prune build
prune dist
prune .git
prune venv
prune .vscode

# Exclude test and work directories
prune tests
prune work_dir
prune auxillary
prune cache
prune coverage_analysis_output

# Exclude data files
exclude *.json
exclude *.geojson
exclude *.csv
exclude *.html
exclude *.png
exclude *.log

# But include example configuration
include full_pipeline_parameters.json
