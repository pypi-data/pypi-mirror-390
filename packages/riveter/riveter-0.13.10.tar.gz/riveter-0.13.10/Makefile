# Makefile for Riveter development tasks

.PHONY: help install install-dev test test-cov test-fast lint lint-fix format format-check type-check pre-commit setup-hooks clean clean-all dev-setup dev-check all quick-check

# Default target
help:
	@echo "ðŸ”§ Riveter Development Commands"
	@echo ""
	@echo "ðŸ“¦ Setup & Installation:"
	@echo "  dev-setup    - Complete development environment setup (recommended for new contributors)"
	@echo "  install      - Install the package"
	@echo "  install-dev  - Install development dependencies"
	@echo "  setup-hooks  - Install and configure pre-commit hooks"
	@echo ""
	@echo "ðŸ§ª Testing:"
	@echo "  test         - Run tests with coverage"
	@echo "  test-fast    - Run tests without coverage (faster)"
	@echo "  test-cov     - Run tests with detailed coverage report"
	@echo ""
	@echo "ðŸ” Code Quality:"
	@echo "  format       - Format code (black + isort)"
	@echo "  format-check - Check code formatting without changes"
	@echo "  lint         - Run linting (ruff)"
	@echo "  lint-fix     - Run linting with auto-fix"
	@echo "  type-check   - Run type checking (mypy)"
	@echo ""
	@echo "ðŸš€ Development Workflow:"
	@echo "  quick-check  - Fast code quality checks (format-check + lint + type-check)"
	@echo "  dev-check    - Development checks (format + lint + type-check)"
	@echo "  pre-commit   - Run all pre-commit hooks"
	@echo "  all          - Complete quality pipeline (format + lint + type-check + test)"
	@echo ""
	@echo "ðŸ§¹ Cleanup:"
	@echo "  clean        - Clean up cache files"
	@echo "  clean-all    - Deep clean (cache + build artifacts)"

# Setup & Installation
dev-setup: install-dev setup-hooks
	@echo ""
	@echo "ðŸŽ‰ Development environment setup complete!"
	@echo ""
	@echo "ðŸ’¡ Next steps:"
	@echo "  â€¢ Run 'make quick-check' to verify everything works"
	@echo "  â€¢ Run 'make test' to run the test suite"
	@echo "  â€¢ Start coding! Pre-commit hooks will run automatically"

install:
	@echo "ðŸ“¦ Installing Riveter package..."
	pip install -e .

install-dev:
	@echo "ðŸ“¦ Installing development dependencies..."
	pip install -e ".[dev]"

# Testing
test:
	@echo "ðŸ§ª Running tests with coverage..."
	pytest tests/ -v --tb=short

test-fast:
	@echo "ðŸ§ª Running tests (fast mode, no coverage)..."
	pytest tests/ -v --tb=short --no-cov

test-cov:
	@echo "ðŸ§ª Running tests with detailed coverage report..."
	pytest tests/ --cov=src/riveter --cov-report=html --cov-report=term-missing

# Code Quality
format:
	@echo "ðŸŽ¨ Formatting code with Black and isort..."
	black src/ tests/
	isort src/ tests/

format-check:
	@echo "ðŸŽ¨ Checking code formatting..."
	black --check src/ tests/
	isort --check-only src/ tests/

lint:
	@echo "ðŸ” Running linting with Ruff..."
	ruff check src/ tests/

lint-fix:
	@echo "ðŸ” Running linting with auto-fix..."
	ruff check src/ tests/ --fix

type-check:
	@echo "ðŸ” Running type checking with MyPy..."
	mypy src/

# Pre-commit
pre-commit:
	@echo "ðŸª Running all pre-commit hooks..."
	pre-commit run --all-files

setup-hooks:
	@echo "ðŸ”§ Setting up pre-commit hooks..."
	@if ! command -v pre-commit >/dev/null 2>&1; then \
		echo "ðŸ“¦ Installing pre-commit..."; \
		pip install pre-commit; \
	else \
		echo "âœ… pre-commit is already installed"; \
	fi
	@echo "ðŸª Installing pre-commit hooks..."
	pre-commit install
	@echo "ðŸ§ª Running pre-commit on all files to check current state..."
	@if pre-commit run --all-files; then \
		echo "âœ… All pre-commit hooks passed!"; \
	else \
		echo "âš ï¸  Some hooks failed. This is normal for the first run."; \
		echo "   The hooks have automatically fixed what they can."; \
		echo "   Please review the changes and commit them."; \
	fi
	@echo ""
	@echo "ðŸŽ‰ Pre-commit setup complete!"
	@echo ""
	@echo "â„¹ï¸  What happens now:"
	@echo "   â€¢ Every time you commit, the hooks will run automatically"
	@echo "   â€¢ Code will be formatted with Black and isort"
	@echo "   â€¢ Code will be linted with Ruff"
	@echo "   â€¢ Type checking will run with MyPy"
	@echo "   â€¢ Tests will run on changed files"
	@echo ""
	@echo "ðŸ’¡ Pro tips:"
	@echo "   â€¢ Run 'make pre-commit' to check all files manually"
	@echo "   â€¢ Use 'git commit --no-verify' to skip hooks (not recommended)"
	@echo "   â€¢ Update hooks with 'pre-commit autoupdate'"

# Cleanup
clean:
	@echo "ðŸ§¹ Cleaning up cache files..."
	find . -type d -name "__pycache__" -exec rm -rf {} + 2>/dev/null || true
	find . -type d -name ".pytest_cache" -exec rm -rf {} + 2>/dev/null || true
	find . -type d -name ".mypy_cache" -exec rm -rf {} + 2>/dev/null || true
	find . -type d -name ".ruff_cache" -exec rm -rf {} + 2>/dev/null || true
	rm -rf htmlcov/ 2>/dev/null || true
	rm -f .coverage 2>/dev/null || true
	@echo "âœ… Cache cleanup complete"

clean-all: clean
	@echo "ðŸ§¹ Deep cleaning (build artifacts + cache)..."
	find . -type d -name "*.egg-info" -exec rm -rf {} + 2>/dev/null || true
	find . -type d -name "build" -exec rm -rf {} + 2>/dev/null || true
	find . -type d -name "dist" -exec rm -rf {} + 2>/dev/null || true
	rm -f coverage.xml 2>/dev/null || true
	@echo "âœ… Deep cleanup complete"

# Development Workflow
quick-check: format-check lint type-check
	@echo "âœ… Quick code quality checks passed!"

dev-check: format lint type-check
	@echo "âœ… Development checks complete!"

# Complete quality pipeline (like CI)
all: format lint type-check test
	@echo "ðŸŽ‰ All quality checks passed!"
