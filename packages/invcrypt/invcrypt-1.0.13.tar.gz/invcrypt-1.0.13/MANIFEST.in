# Include main documentation and metadata
include README.md
include LICENSE
include requirements.txt
include pyproject.toml
include setup.py
include MANIFEST.in

# Include compiled protected modules (.pyc) in __pycache__
recursive-include invcrypt/__pycache__ *.pyc

# Include all Python source files for the open parts (CLI, config, etc.)
recursive-include invcrypt *.py

# Exclude temporary, build, and cache directories
exclude *.pyc
exclude __pycache__/
exclude .gitignore
exclude .gitattributes
exclude *.log

# Exclude local development and build artifacts
prune build
prune dist
prune *.egg-info
